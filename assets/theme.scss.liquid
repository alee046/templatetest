// LINK LISTS

.header-navigation-list {
  display: inline-block;
  vertical-align: middle;
  margin: 0;
  padding: 0;

  &:not(.secondary-list) {
    .navigation & {
      .header-drawer & {
        display: block;
      }
    }
  }
}

.header-navigation-list-item {
  position: relative;
  float: left;
  padding: 20px 0;
  margin: 0;

  .header-drawer & {
    width: 100%;
    padding: 0;
  }
}

.primary-link {
  height: 20px;
  padding: 0;
  margin: 0 20px;

  .slide-color-dark &:after { background-color: $black; }
  .slide-color-light &:after  { background-color: $white; }

  .slide-color-light &,
  .slide-color-dark & {
    position: relative;
  }

  .primary-link-inner {
    pointer-events: none;
    padding: 0 5px;
  }
}

.has-dropdown {
  .header-navigation-link.primary-link {
    display: flex;
    align-items: center;
    justify-content: center;
  }
}

.header-navigation-link {
  @include font-smoothing();
  float: left;
  font-size: 13px;
  font-weight: bold;
  line-height: 20px;
  letter-spacing: 0.3px;
  text-transform: uppercase;
  color: $body-text-light;

  &:hover {
    color: $primary-color;

    .header-navigation-list-arrow {
      color: $primary-color;
    }
  }

  .slide-color-light &,
  .slide-color-dark & {
    position: relative;

    &:focus,
    &:hover {
      opacity: 1;
    }

    &.header-navigation-current:after {
      display: none;
    }
  }

  &.header-navigation-current {
    color: $primary-color;
    position: relative;
    font-weight: bold;

    &:focus,
    &:hover {
      color: $primary-color;
      opacity: 1;
    }

    .header-bleed-light-colors & {
      color: $white;
      font-weight: 700;
      opacity: 1;

      &:focus,
      &:hover {
        color: $white;
      }

      &:after {
        background: $white;
      }
    }

    .header-bleed-dark-colors & {
      color: $black;
      font-weight: 700;
      opacity: 1;

      &:focus,
      &:hover {
        color: $black;
      }

      &:after {
        background: $black;
      }
    }

    .showing-drawer & {
      font-weight: bold;
      color: $primary-color;

      &:focus,
      &:hover {
        color: $primary-color;
        font-weight: bold;
      }
    }
  }

  &.open,
  &.open:hover {
    .header-drawer & {
      color: white;
      background: $primary-color;

      .header-navigation-list-arrow {
        color: white;
      }
    }
  }

  .header-drawer & {
    float: none;
    height: auto;
    margin: 0;
    padding: 20px 15px;
    text-align: center;
    vertical-align: top;
    font-family: $heading-font;
    font-size: $drawer-font-size;
    line-height: $drawer-font-size + 10;
    text-transform: none;
    color: rgba($body-text-color, 0.4);
    border-bottom: 1px solid $border-color;
    display: block;

    &:hover {
      color: $primary-color;
    }

    &:after {
      display: none !important;
    }
  }
}

.top-header-link {
  font-size: 10px;
  font-weight: 700;
  color: $body-text-light;
  margin: 0 5px;
  @include font-smoothing();
  float: left;
  line-height: 20px;
  letter-spacing: 2px;
  text-transform: uppercase;
  display: block;
  height: auto;
  padding: 0;
  text-align: left;
}

.secondary-list {
  @include border-radius(5px);
  display: block;
  position: absolute;
  top: -9999px;
  left: -9999px;
  width: 160px;
  margin: 0 0 0 50%;
  padding: $gutter/2 0;
  text-align: center;
  background-color: $white;
  border: 1px solid $border-color;

  &:before, &:after {
    bottom: 100%;
    left: 50%;
    border: solid transparent;
    content: " ";
    height: 0;
    width: 0;
    position: absolute;
    pointer-events: none;
    border-color: rgba(136, 183, 213, 0);
  }

  &:before {
    border-bottom-color: $border-color;
    border-width: 8px;
    margin-left: -8px;

    @media (min-width: 721px) {
      .header-bleed-light-colors & {
        border-bottom-color: $white;
      }

      .header-bleed-dark-colors & {
        border-bottom-color: $black;
      }
    }
  }

  &:after {
    border-bottom-color: $white;
    border-width: 7px;
    margin-left: -7px;

    @media (min-width: 721px) {
      .header-bleed-light-colors & {
        border-bottom-color: $white;
      }

      .header-bleed-dark-colors & {
        border-bottom-color: $black;
      }
    }
  }

  .header-drawer & {
    @include border-radius(0);
    position: relative;
    display: none;
    top: auto;
    left: auto;
    float: left;
    width: 100%;
    margin: 0;
    padding: 0;
    background-color: transparent;
    border: 0;

    &:before, &:after {
      display: none;
    }
  }
}

.header-navigation-link.open + .secondary-list {
  display: block;
}

.secondary-list-item {
  display: block;
  width: 100%;
  padding: 0 10px 10px;
  margin: 0;

  &:last-child {
    padding-bottom: 0;
  }
}

.secondary-link {
  display: block;
  width: 100%;
  height: auto;
  padding: 0;
  margin: 0;
  color: $body-text-color;
  text-align: left;
  opacity: 1;

  &:focus,
  &:hover {
    color: $primary-color;

    .header-drawer & {
      color: $primary-color;
    }
  }

  .header-bleed-dark-colors &,
  .header-bleed-light-colors & {
    color: $body-text-color;

    &:focus,
    &:hover {
      color: $primary-color;
    }
  }

  .header-drawer & {
    color: black;
    font-size: .8rem;
    font-family: $body-font;
    padding: 10px 15px;
    text-transform: uppercase;

    &:focus,
    &:hover {
      color: $primary-color;
    }
  }
}

.header-navigation-list-arrow {
  display: none;
  font-size: 32px;
  color: rgba($body-text-color, 0.4);
  cursor: pointer;
  line-height: 28px;
  transition: all 0.25s;

  .header-drawer & {
    display: inline-block;
  }

  .open & {
    -webkit-transform: rotate(180deg);
    -moz-transform: rotate(180deg);
    -o-transform: rotate(180deg);
    -ms-transform: rotate(180deg);
    transform: rotate(180deg);
  }
}

.pagination {
  padding: $gutter * 2 0;
  max-width: 100%;
  width: 100%;

