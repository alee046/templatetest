      background: none !important; // override inline styles
    }
  }
}

.transition-fade .home-slide {
  opacity: 0;

  &.active {
    z-index: 1;
    opacity: 1;
  }

  &.next.left,
  &.prev.right,
  &.active.left,
  &.active.right {
    @include transition(opacity $slideshowSpeed $ease);
  }

  &.next.left,
  &.prev.right {
    opacity: 1;
  }

  &.active.left {
    opacity: 0;
  }
  &.active.right {
    opacity: 0;
  }
}

.transition-slide .home-slide {
  z-index: 1;
  visibility: hidden;

  &.active {
    @include transform(translateX(0));
    z-index: 2;
    visibility: visible;
  }

  &.next {
    @include transform(translateX(100%));
  }

  &.prev {
    @include transform(translateX(-100%));
  }

  &.next.left,
  &.prev.right,
  &.active.left,
  &.active.right {
    @include transition(transform $slideshowSpeed $ease);
  }

  &.next.left,
  &.prev.right {
    @include transform(translateX(0));
    visibility: visible;
    z-index: 10;
  }

  &.active.left {
    @include transform(translateX(-100%));
  }
  &.active.right {
    @include transform(translateX(100%));
  }
}

