  }

  .column-4 & {
    width: 25%;

    @include breakpoint(md) { width: 50%; }
    @include breakpoint(xs) { width: 100%; }
  }

  .inline & {
    @include breakpoint(md) {
      padding: $gutter $gutter/2;
    }
  }

  .random & {
    float: left;

    .list-cover {
      background-position: center;
      background-repeat: no-repeat;
    }

    @include breakpoint(sm) {
      float: none;
      display: block;
    }

    &:nth-child(1n) {
      width: 50%;

      @include breakpoint(sm) {
        width: auto;
