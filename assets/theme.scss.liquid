// STICKY HEADER

body {
  &.has-sticky-header {
    padding-top: 110px;

    @include breakpoint(sm) { padding-top: 0; }

    &.has-slideshow-full-window { padding-top: 0 !important; }

    &.has-goal-enabled {
      padding-top: $header-height + $header-goal-height;

      @include breakpoint(sm) { padding-top: 0; }

      .no-js & {
        padding-top: $header-height;

        @include breakpoint(sm) { padding-top: 0; }
      }

      &.has-goal-expired { padding-top: $header-height; }
    }
  }
}

// HEADER

.header {
  @include transition(background 0.2s $ease);
  position: relative;
  display: block;
  width: 100%;
  background: white;

  .has-slideshow-full-window & {
    top: 0;
    right: 0;
    left: 0;
    position: absolute;
    box-shadow: none;
    background: white;

    @include breakpoint(sm) { position: relative; }
  }

  .showing-drawer.has-slideshow-full-window & { position: relative; }

  .showing-drawer & {
    height: 100vh;
    overflow-y: auto;
    background-color: rgba($white, 1) !important;
  }

  &.sticky-header {
    @include transition (all 0.2s $ease);
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    z-index: 99;
    border-bottom: 1px solid $border-color;

    @include breakpoint(sm-up){
      &.scrolled {
        background-color: $white;
      }

      &.header-bleed-light-colors {
        background-color: rgba($black, 0.4);
      }

      &.lower-than-slideshow {
        background-color: $white;

        &.header-bleed-light-colors {
          background-color: rgba($black, 0.4);
        }
      }
    }

    .showing-drawer & { position: fixed; }

    @include breakpoint(sm) {
      position: relative;
      left: auto;
      top: auto;
    }

    .has-goal-enabled & {
      top: $header-goal-height;

      @include breakpoint(sm) { top: auto; }
    }

    .has-goal-expired & { top: 0; }

    .no-js .has-goal-enabled &,
    .showing-drawer &,
    .template-index & {
      top: 0;
    }
  }
}

