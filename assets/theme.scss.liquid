// INPUT NUMBER CUSTOM STYLING

input[type="number"] {
  @include border-radius(0);
  margin: 0;
  padding: 0;
  border: 0;
  color: $body-text-color;
  -moz-appearance: textfield;

  &::-webkit-outer-spin-button,
  &::-webkit-inner-spin-button {
    -webkit-appearance: none;

    .no-js & {
      -webkit-appearance: number;
      -moz-appearance: number;
    }
  }

  .no-js & {
    height: auto;
    line-height: 1;
    padding: 5px 0;
    color: $black;
    -webkit-appearance: number;
    -moz-appearance: number;
  }
}

.number-input-wrapper {
  position: relative;
  display: inline-block;
  border-bottom: 1px solid #EDEDED;
  overflow: hidden;

  .no-js & {
    margin: $gutter/2 0 0;
  }
}

.number-input-field {
  float: left;
  width: $input-number-width - $input-number-nav-width;
  height: 30px;
  background-color: $white;
  line-height: $input-number-height;
  input{
    font-size: 18px;
  }
  @include breakpoint(sm) {
    text-align: center;
    width: 100%;
  }

  .cart-item-td & {
    @include breakpoint(md) {
      text-align: center;
      width: 100%;
      line-height: 40px;
      height: 40px;
    }
  }

  input[type="number"] {
    float: left;
    width: 100%;
    height: 100%;
    text-align: center;
    border: 0;
  }

  .no-js & {
    height: auto;
    line-height: 1;
  }
}

.quantity-wrapper {
  display: flex;
  align-items: center;
  margin: 0 auto;
}

.number-input-label {
  margin-right: 20px;
  font-size: 0.9rem;
  @include breakpoint(md){
    font-size: 18px;
  }
}

.quantity-cart-row {
  margin-top: 20px;

  @media (min-width: 1020px) {
    display: flex;
    justify-content: space-between;
    align-items: center;

    .add-to-cart {
      margin: 0;
    }
  }

  @include breakpoint(md) {
    .quantity-wrapper {
      width: 290px;
    }

    .add-to-cart {
      text-align: left;
    }
  }
}

.number-input-nav {
  float: left;
  height: $input-number-height;
  width: $input-number-nav-width;
  border-left: 1px solid $border-color;

  @include breakpoint(sm) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    border: 0;
  }

  .cart-item-td & {
    @include breakpoint(md) {
      width: 100%;
    }
  }

  .no-js & {
    display: none;
  }
}

.number-input-nav-item {
  float: left;
  height: $input-number-height/2;
  line-height: $input-number-height/2;
  width: $input-number-nav-width;
  color: $primary-color;
  background-color: $white;
  text-align: center;
  cursor: pointer;
  @include breakpoint(md) {
    height: 55px;
    line-height: 55px;
    width: 175px;
    background-color: $very-light-grey;
  }
  .cart-item-td & {
    @include breakpoint(md) {
      width: 100%
    }
  }

  &:focus,
  &:hover {
    color: $primary-color;
    background-color: $very-light-grey;
  }
}

// SELECT CUSTOM STYLING

.select-wrapper {
  position: relative;
  height: 31px;
  line-height: $select-height;
  border-bottom: 1px solid $border-color;
  color: $body-text-color;
  background-color: $white;
  padding: 0 30px 0 0;
  margin: 0;
  font-size: 14px;
  text-align: left;
  cursor: pointer;
  z-index: 55;

  &.active {
    border-color: $primary-color;
  }

  .customer-address-edit-form & { width: 100% !important; }

  .no-js & {
    padding: 0 !important;
    margin-bottom: -2px;
  }

  &:after {
    position: absolute;
    top: 0;
    right: 15px;
    height: 100%;
    line-height: inherit;
    color: $primary-color;
    content: "\F107";
    @include launch-icons(24px);

    .no-js & {
      display: none;
    }
  }

  select {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 2;
    width: 100%; // needed for Firefox
    height: 100%; // needed for IE
    padding: 0;
    text-transform: none;
    cursor: pointer;
    opacity: 0;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
  }

  .selected-text {
    @include ellipsis();
    height: $select-height;
    line-height: $select-height;
    width: 100%;
    z-index: 2;

    .no-js & {
      display: none;
    }
  }
}

