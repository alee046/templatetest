  content: "\f107";
}

//-- ION ICON HELPER --//
.icon-size-1x { font-size: 1em; }

.icon-size-2x { font-size: 2em; }

.icon-size-3x { font-size: 3em; }

.icon-size-4x { font-size: 3em; }

%modal-wrapper {
  display: none;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
  background-color: rgba($white,0.6);

  &.active {
    display: block;
  }
}

%modal {
  @include transform(translate(-50%,-50%));
  @include box-shadow();
  position: absolute;
  top: 50%;
  left: 50%;
  max-width: 640px;
  padding: $gutter*3;
  border: 1px solid $border-color;
  text-align: center;
  background-color: $body-background-color;
}

%modal-action-button {
  margin-top: $gutter;
}

%modal-title {
  margin-bottom: 18px;
}

.placeholder-svg {
  display: block;
  background-color: mix($border-color, $body-background-color);
  border: 1px solid mix($border-color, $body-background-color);
  fill: $body-text-color;
}


// Templates
.template-404 {
  .main-content {
    text-align: center;
  }
}
.about {
  @include breakpoint(sm) {
    padding: $gutter $gutter / 2;
  }
}

.about-content {

  .no-content {
    padding-bottom: $gutter * 2;
  }
}


// BLOG

.blog {
  padding-bottom: 0;

  @include breakpoint(sm) {
    padding: $gutter 0 0;
  }
}

.blog-header {
  margin: 0;
  padding-bottom: $gutter * 2;

  @include breakpoint(sm) {
    padding: 0;
  }
}

.blog-rss {
  @include share-icons();
  margin-left: 10px;
}

.blog-menu {
  @include breakpoint(sm) {
    padding: $gutter/2 0;
    background: $light-grey;
  }
}

.blog-subtitle-button {
  width: auto;
  height: 40px;
  line-height: 40px;
  padding: 0 $gutter;
  margin: 0 $gutter/3;
  border-color: transparent;
  color: $body-text-color;
  font-weight: 300;

  @include breakpoint(sm) {
    display: block;
    margin: auto;
  }

  &:hover {
    border-color: transparent;
    background: transparent;
    color: $primary-color;
  }

  &.active {
    border-color: $border-color;
    color: $primary-color;
    font-weight: 700;

    @include breakpoint(sm) {
      border-color: transparent;
    }
  }
}

.blog-tags-wrapper {
  display: block;
  max-width: 700px;
  margin: 0 auto $gutter * 2;
  font-size: 14px;
  text-align: center;

  @include breakpoint(sm) {
    margin: $gutter auto 0;
  }
}

.blog-tags-list {
  display: inline-block;
  vertical-align: top;
}

.blog-tags-list-item {
  display: inline-block;
  vertical-align: top;

  a:after  {
    display: inline-block;
    content: ",";
    color: $body-text-color;
  }

  &:last-child a:after {
    display: none;
  }
}

.blog-tags-current p {
  padding: 0;
  font-size: 12px;
  color: $body-text-color;
}

// POST

.post-wrapper {
  display: block;
  text-align: center;
  max-width: 700px;
  margin: auto;
}

.post {
  display: block;
  padding-top: $gutter * 2;
  margin-top: $gutter * 2;
  text-align: left;
  border-top: 1px solid $border-color;

  @include breakpoint(sm) {
    padding-top: $gutter / 2;
    padding-bottom: $gutter / 2;
    margin-top: $gutter / 2;
  }

  &:first-child {
    padding-top: 0;
    margin-top: 0;
    border: 0;
  }

  &:last-child {
    padding-bottom: $gutter * 2;
  }
}

.post-title {
  height: auto;
  font-size: $h2-font-size;
  line-height: $h2-font-size + 10;

  @include breakpoint(sm) {
    padding: $gutter $gutter/2 0;
    font-size: $heading-font-size-mobile;
    line-height: $heading-font-size-mobile + 10;
  }

  * {
    color: $heading-text-color;

    .style-gradient &,
    .style-color & {
      color: $white;
    }
  }
}

.post-subtitle {
  color: $body-text-color;

  span {
    padding: 0;
    margin: 0;

    &:after {
      @include border-radius(100%);
      @include transform(translateY(-2px));
      display: inline-block;
      margin: 0 6px 0 10px;
      width: 6px;
      height: 6px;
      line-height: inherit;
      background-color: $body-text-color;
      content:"";
    }

    &:last-child {
      &:after {
        display: none;
      }
    }
  }

  .style-gradient &,
  .style-color &,
  .style-secondary-color &,
  .style-third-color &,
  .style-fourth-color &,
  .style-fifth-color & {
    color: $white;
  }
}

.post-meta {
  padding: 10px 0 0;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: $body-text-color;
  font-size: $body-font-size-2;

  @include breakpoint(sm){
    padding: 0 $gutter/2;
  }

  span {
    display: inline-block;
    padding: 0;
    margin: 0;
    font-size: inherit;
  }

  .post-tags {
    color: $body-text-color;

    &:hover {
      color: $primary-color;
    }
  }
}

.post-content {
  padding: $gutter 0 0;

  @include breakpoint(sm) {
    padding: $gutter $gutter/2;
  }

  p:first-child {
    padding-top: 0;
  }

  p:last-child {
    padding-bottom: 0;
  }
}

.post-image {
  margin: $gutter 0 0;
  width: 100%;
}

.post-button {
  min-width: $button-min-width;
  margin: 50px 0 0;

  @include breakpoint(sm) {
    margin: 0;
  }
}

// ARTICLE

.article-intro {
  margin-top: $gutter * 2;

  @include breakpoint(sm) {
    margin-top: 0;
  }
}

.article-intro-image-container {
  @include background-size(cover);
  display: block;
  height: 500px;
  background-position: center;
  background-repeat: no-repeat;

  @include breakpoint(sm) {
    height: auto;
    background-image: none;
  }
}

.article-intro-image {
  display: none;

  @include breakpoint(sm) {
    display: block;
  }
}

.article {
  display: block;
}

.article-title {
  height: auto;
  line-height: 44px;
  font-size: 34px;

  @include breakpoint(sm) {
    padding: 0 $gutter/2;
  }
}

.article-subtitle {
  padding: $gutter/2 0 0;
  margin: 0 0 $gutter * 3;

  @include breakpoint(sm) {
    padding: 0 $gutter/2;
    margin: 0 0 $gutter;
  }

  p {
    display: inline-block;
    padding: 0 $gutter/4;
    text-transform: uppercase;
    color: $body-text-color;
    font-size: 14px;
  }
}

.article-content {
  text-align: left;

  @include breakpoint(sm) {
    padding: 0 $gutter/2;
  }

  p {
    &:first-child {
      padding-top: 0;
    }

    &:last-child {
      padding-bottom: 0;
    };
  }

  img {
    width: 800px;
    max-width: 800px;
    margin-left: -50px;

    @include breakpoint(md) {
      width: 100%;
      max-width: 100%;
      margin-left: 0;
    }

    @include breakpoint(sm) {
      width: 320px;
      max-width: 320px;
      margin-left: -$gutter/2;
      margin-right: -$gutter/2;
    }
  }
}

// COMMENTS
.module-post-comments {
  .module-header {
    padding-bottom: $gutter * 2;

    @include breakpoint(sm) { padding-bottom: $gutter; }

    &:only-child{ padding-bottom: 0; }
  }
}

.post-comments-title {

  .module-header:only-child & { padding-bottom: 0;}
}

.post-comments-form-container {
  display: inline-block;
  width: 100%;
  max-width: 700px;
  margin: auto;
  vertical-align: top;

  @include breakpoint(sm) {
    padding: 0 $gutter/2 $gutter;
  }
}

.post-comments {
  display: inline-block;
  vertical-align: top;
  width: 100%;
  max-width: 700px;
  text-align: left;

  @include breakpoint(sm) {
    padding: 0 $gutter/2 $gutter;
  }
}

.post-comment {
  display: block;
  margin: 0 0 $gutter * 2;
  padding: 0 0 $gutter * 2;
  border-bottom: 1px solid $body-text-color;

  @include breakpoint(sm) {
    margin: 0 0 $gutter ;
    padding: 0 0 $gutter;

    &:last-child {
      margin: 0;
      padding: 0;
    }
  }

  &:last-child {
    margin: 0;
    padding: 0;
    border: 0;
  }
}

.post-comment-message {
  display: block;
  font-size: 18px;

  @include breakpoint(sm){
    font-size: 16px;
  }

  .post-comment-error-message & {
    color: $error-color;
  }
}

.post-comment-success-message {
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
  width: 100%;
  padding: $gutter / 2;
  text-align: center;
  background-color: $success-color;

  a { display: inline-block; }

  .post-comment-message {
    color: $white;
  }
}

.template-cart {
  .empty {
    text-align: center;
  }
}

.cart {
  padding-left: $gutter;
  padding-right: $gutter;

  @include breakpoint(md) {
    padding-right: $gutter / 2;
    padding-left: $gutter / 2;
  }

  @include breakpoint(sm) {
    padding: 0 0 $gutter;
  }
}

.cart-header {
  @include breakpoint(sm) {
    margin-top: $gutter * 2;
  }
}

.cart-items-container {
  display: block;
  padding: 0 80px 0 0;

  @include breakpoint(md) {
    width: 520px;
    padding: 0;
    margin: auto;
  }

  @include breakpoint(sm) {
    width: 100%;
  }

  .order & {
    padding: 0;
  }
}

// TABLE

.cart-items {
  width: 100%;
  margin-top: 0;
  border-collapse: collapse;
  border: 0;
  @include transition(height 0.2s $ease);

  &.empty {
    height: 0;
    overflow: hidden;
  }

  thead {
    @include breakpoint(md) {
      display: none;
    }
  }

  th {
    padding: 20px 0;
    font-weight: 300;
    font-family: $body-font;
    color: $heading-text-color;
    text-align: left;
    border-top: none;
    border-bottom: 1px solid $border-color;

    &.first {
      padding-left: 0;
    }

    &.last {
      padding-right: 0;
      text-align: right;
    }
  }

  tr {
    @include breakpoint(md) {
      border-bottom: 1px solid $light-grey;
      margin-bottom: 20px;
      display: inline-block;
    }
  }

  .mobile-only {
    display: none;

    @include breakpoint(md) {
      display: inline-block;
    }
  }
}

.cart-item {
  position: relative;
  @include transition(opacity 0.3s ease-in, height 0.3s ease-in);

  &.removing {
    opacity: 0;
  }
  @include breakpoint(sm) {
    position: relative;
    display: inline-block;
    width: 100%;
  }
}

.cart-item-td {
  width: 15%;
  padding: 40px 0;
  line-height: 1;
  text-align: left;
  color: $body-text-color;
  vertical-align: middle;
  border: 0;
  border-bottom: 1px solid $border-color;
  div span.cart-title{
    width: 100%;
  }
  @include breakpoint(md) {
    float: left;
    width: 520px;
    padding: $gutter/2 $gutter/2 0;
    margin: 0;
    border: 0;
    color: $body-text-color;
    text-align: center;

    &:first-child {
      padding-top: $gutter;
    }

    &:last-child {
      padding-bottom: $gutter/2;
    }
  }

  @include breakpoint(sm) {
    width: 100%;
    div span{
      font-size: 14px;
    }
  }
}

.cart-item-quantity-wrapper {
  @include breakpoint(md) {
    width: 100%;
    margin: auto;
  }

  @include breakpoint(sm) {
    width: 100%;
  }
}

.cart-title {
  a {
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: $black;
  }
}

.cart-item-unit-price {
  @include breakpoint(md) {
    text-align: center;
  }
}

.cart-item-product {
  width: 55%;

  @include breakpoint(md) {
    width: 100%;
    text-align: center;
  }
  @include breakpoint(sm) {
    width: 340px;
    margin: 0 auto;
    display: block;
    float: none;
    overflow: hidden;
  }
}

.cart-item-product-wrap {
  display: inline-block;
  margin-left: $gutter/3;
  vertical-align: middle;

  @include breakpoint(l) {
    max-width: 250px;
  }

  @include breakpoint(md) {
    width: 100%;
    max-width: 100%;
    margin: 0;
  }
  @include breakpoint(sm) {
    float: left;
    text-align: left;
    width: calc(100% - 100px);
    margin-top: 30px;
    padding-left: 10px;
    .cart-item-product-wrap, .cart-item-product-wrap span a{
      font-size: 13px
    }
  }

  span {
    display: block;
    padding: 5px 0 0;
  }
}

.cart-item-image-container {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  width: 80px;

  @include breakpoint(md) {
    display: block;
    width: 100%;
    padding-bottom: $gutter/2;
    text-align: center;
  }
  @include breakpoint(sm) {
    width: 100px;
    float: left;
    padding: 0;
    position: initial;
    a:first-child{
        display: block;
        width: 100%;
        margin: 0;
    }
    .cart-item-remove{
        display: block;
        right: 20px;
        left: auto;
        top: 20px;
        span{
          font-size: 30px;
        }
    }
  }
}

.cart-item-total-container {
  position: relative;
  display: block;
  text-align: right;

  @include breakpoint(md) {
    text-align: center;
    padding-bottom: $gutter/2;
  }
}

.cart-image {
  display: inline-block;
  width: 100%;
  vertical-align: middle;

  img {
    display: block;
    margin: 0 auto;
    max-width: 100%;
  }

  @include breakpoint(sm) {
    display: block;
    width: 100px;
    margin: 0 auto $gutter/2;
  }
}

.cart-item-remove {
  position: absolute;
  left: 100%;
  top: 50%;
  width: 40px;
  height: 40px;
  margin: -20px 0 0 30px;
  vertical-align: middle;
  color: $primary-color;
  text-align: center;
  cursor: pointer;

  @include breakpoint(md) {
    left: auto;
    top: -25px;
    right: -10px;
    margin: 0;
    display: none;
  }

  .icon {
    width: 100%;
    height: 100%;
    line-height: 40px;
    font-size: 28px;
  }

  &.mobile-only {
    display: none;

    @include breakpoint(md) {
      display: block;
    }
  }

  &:hover {
    color: $primary-color;
  }
}

// TOTALS

.cart-tools {
  position: relative;
  display: block;
  text-align: right;
}

.cart-totals {
  @extend .clearfix;
  display: block;
  margin: 0;
  padding: 0 80px 0 0;
  text-align: right;

  @include breakpoint(md) {
    padding: 0;
  }
}

.cart-price-info {
  color: $heading-text-color;

  @include breakpoint(md) {
    text-align: center;
  }
}

.sub-total,
.cart-price {
  padding: 0;
}

.cart-message,
.cart-currency-note {
  display: block;
  font-size: 13px;
  line-height: 23px;
  font-style: italic;
  color: $body-text-color;
  text-align: right;
  padding: 0;

  @include breakpoint(md) {
    display: block;
    margin: auto;
    max-width: 320px;
    text-align: center;
  }
}

.cart-price {
  font-size: $h2-font-size;
  line-height: $h2-font-size + 10;
  color: $heading-text-color;
}

// CTA

.cart-cta {
  margin-top: $gutter;
  @include breakpoint(md) {
    max-width: 320px;
    margin-right: auto;
    margin-left: auto;
    text-align: center;
  }

  input { vertical-align: middle; }
}

.cart-button {
  min-width: $button-min-width;

  &:last-child { margin-right: 0; }

  @include breakpoint(md) {
    padding-right: 0;
    padding-left: 0;
    margin-top: $gutter / 2;
    text-align: center;
  }

  @include breakpoint(md-up) {
    &.cart-update-button {
      margin-right: $gutter / 2;
    }
  }
}

.cart-additional-checkout-buttons {
  display: inline-block;
  vertical-align: middle;

  @include breakpoint(md-up) {
    margin-right: - $gutter / 4;
    margin-left: $gutter / 2;
  }

  input {
    margin-top: 0;
    margin-right: $gutter / 4;
    margin-left: $gutter / 4;

    @include breakpoint(md) {
      margin-top: $gutter / 2;
    }
  }

  //scss-lint:disable ImportantRule
  .shopify-apple-pay-button {
    margin-bottom: 0 !important;

    @include breakpoint(md-up) {
      margin-top: 0 !important;
      margin-right: $gutter / 4 !important;
      margin-left: $gutter / 4 !important;
    }

    @include breakpoint(md) {
      margin-top: $gutter / 2 !important;
    }
  }
}

// INSTRUCTIONS

.cart-instructions {
  display: block;
  font-size: $body-font-size-1;
  padding: $gutter*2 80px 0 0;
  text-align: left;

  @include breakpoint(md) {
    width: 290px;
    padding: $gutter 0 0;
    margin: auto;
  }

  p {
    text-align: left;
    padding: 0 0 $gutter/2;
  }

  textarea {
    font-size: 14px;
  }
}

.cart-checkout {
  margin-top: $gutter;
}

.cart-modal-wrapper {
  @extend %modal-wrapper;

  .cart-modal { @extend %modal; }
  .cart-modal .section-title { @extend %modal-title; }
  .cart-modal-action { @extend %modal-action-button; }
}

.cart-item-undo {
  @include breakpoint(sm) {
    text-align: center;
  }
}

.cart-undo {
  cursor: pointer;
  color: $primary-color;

  &:hover {
    color: $primary-color;
  }
}

.cart-shipping-calculator-wrapper {
  font-size: 0;
  margin-top: $gutter*2;

  @include breakpoint(sm) {
    padding-right: $gutter;
    padding-left: $gutter;
  }
}

.cart-shipping-calculator {
  width: 60%;
  display: inline-block;
  vertical-align: top;
  font-size: $body-font-size-1;
  text-align: left;

  @include breakpoint(sm) {
    width: 100%;
    text-align: center;
  }
}

.cart-shipping-calculator-response {
  width: 40%;
  display: inline-block;
  vertical-align: top;
  font-size: 14px;
  padding: 39px 0 0 $gutter;
  text-align: right;

  @include breakpoint(sm) {
    width: 100%;
    text-align: center;
    padding: 0;
  }
}

.shipping-country-wrapper, .shipping-province-wrapper {
  margin-top: 15px;

  .select-wrapper {
    margin: 0;
  }
}

.cart-shipping-zip-code input {
  display: inline-block;
  width: auto;
  font-size: 14px;
  min-width: 270px;

  @include breakpoint(sm) {
    width: 100%;
    margin: 0;
  }

  &[type='text'] {
    margin-right: $gutter/2;
    margin-bottom: $gutter/2;
  }
}

input[type="button"].cart-shipping-calculate {
  @include breakpoint(sm) {
    margin: 15px 0 0 0;
  }
}

// DEFAULT

.collection {
  width: 100%;
  padding: $gutter*3 0;

  @include breakpoint(sm) {
    padding: $gutter 0 0;
  }

  .style-light &,
  .style-color &,
  .style-gradient &,
  .style-secondary-color &,
  .style-third-color &,
  .style-fourth-color &,
  .style-fifth-color & {
    margin-top: $gutter*2;
  }
}

.collection-header {
  padding-bottom: $gutter;
}

.collection-tag-selector {
  display: inline-block;
  margin: $gutter auto 0;
  vertical-align: top;

  .select-wrapper {
    width: 200px;
    background-color: $white;
  }
}

.collection-button {
  @include breakpoint(sm) {
    width: 290px;
    padding-right: 0;
    padding-left: 0;
    text-align: center;
  }
}

.collection-list {
  width: 100%;
  margin-top: $gutter;
}

.collection-subtitle {
  padding: $gutter $gutter 0;

  @include breakpoint(sm) {
    padding: $gutter $gutter/2 0;
  }
}

// ALTERNATING

.collection-alternating {
  max-width: 100%;
  padding-bottom: 0;
}

.collection-alternating-product {
  position: relative;
  overflow: hidden;
  font-size: 0;

  &:nth-child(odd) {
    background-color: rgba($black,0.02);
  }

  &:first-child {
    margin-top: 0;
    padding-top: 0;
    border-top: none;
  }
}

.collection-alternating-section {
  display: inline-block;
  width: 50%;
  vertical-align: middle;

  @include breakpoint(md) {
