      .list-cover {
        @include dummy($aspect: calc(100% + #{$gutter / 2}), $background: false);

        @include breakpoint(md) {
          @include dummy($aspect: 100%, $background: false);
        }
      }
    }

    &:nth-child(2n) {
      width: 50%;

