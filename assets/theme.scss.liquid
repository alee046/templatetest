// PRODUCT: SLIDESHOW

.product-slideshow {
  position: relative;
  padding: 0 $gutter * 2 / 3;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: flex-start;
  width: 100%;
  max-width: 1100px;
  margin: auto;

  @include breakpoint(sm) {
    max-width: 600px;
    padding-right: 0;
    padding-left: 0;
    margin-right: auto;
    margin-left: auto;
    display: block;
  }

  .product-images-wrapper {
    flex-direction: row;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 500px;
    margin-right: $gutter * 3;

    @include breakpoint(md) {
      margin: $gutter;
    }

    @include breakpoint(sm) {
      margin: auto;
    }
  }
}

.product-image-container {
  position: relative;
  display: block;
}

.product-big-image {
  position: relative;
  display: block;
  padding: 0;

  @include breakpoint(md) {
    padding-right: 0;
  }

  img {
    display: block;
    margin: 0 auto;
    width: 100%;
    max-width: 520px;
    @include breakpoint(sm){
      width: 70%;
    }
  }

  &.working {

    img {
      visibility: hidden;
    }
  }

  &.zoom-enabled {
    cursor: pointer;
    cursor: zoom-in;
  }
}

.product-slideshow-loader {
  @extend .add-to-cart-loader;
  left: 50%;
  right: auto;
  z-index: 1;
  display: none;

  .working & {
    display: block;
  }
}

.product-image-zoom {
  position: absolute;
  background-color: white;
  background-repeat: no-repeat;
  display: none;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 10;

  cursor: pointer;
  cursor: zoom-out;

  &.active {
    display: block;
  }
}

.product-thumbnails {
  margin-top: $gutter;
  text-align: center;
  font-size: 0;
  display: flex;
  flex-direction: column;

  @include breakpoint(sm) {
    display: none;
  }

  &.hidden {
    visibility: hidden;
  }
}

.product-no-images {
  width: 100%;
  padding: 35%;
  background: #fafafa;

  .no-svg & {
    padding: 0;
    background: none;
  }
}

.product-slideshow-pagination-item {
  @include transition(all 0.2s $ease);
  @include background-size(cover);
  display: inline-block;
  vertical-align: top;
  width: 50px;
  height: 50px;
  padding: 2px;
  margin: 0 10px 10px 0;
  background-position: center;
  background-repeat: no-repeat;
  opacity: 0.5;

  &.active {
    opacity: 1;
  }
}

.product-slideshow-pagination-item-image {
  display: none;
}

.product-slideshow-navigation {
  @include transition(all $slideshowSpeed $ease);
  position: absolute;
  top: 50%;
  width: $gutter*2;
  height: 60px;
  line-height: 60px;
  margin-top: -30px;
  z-index: 2;
  text-align: center;
  font-size: 28px;
  cursor: pointer;
  color: $primary-color;
  display: none;
}

.product-slideshow-previous {
  left: 0;
}

.product-slideshow-next {
  right: 0;
}

// PRODUCT: INFO WRAP

.product-wrap {
  text-align: left;
  padding-left: $gutter;

  @include breakpoint(sm) {
    padding: 0 $gutter/2;

    .product-goal {
      padding-right: 20px;
      padding-left: 20px;
    }
  }
}

// PRODUCT DETAILS

.product-details {

  @include breakpoint(sm) {
    display: none;
  }

  &.mobile {
    display: none;
    text-align: center;

    @include breakpoint(sm) {
      display: block;
      padding-right: $gutter / 2;
      padding-left: $gutter / 2;
    }
  }
}

.product-title {
  display: block;
  margin: 0 0 5px;
  color: $heading-text-color;

  h1 {
    font-size: 34px;
    line-height: 44px;
    padding: 0;
    margin: 0;
  }
}

.product-vendor {
  color: $body-text-color;
}

.product-price {
  display: block;
  font-size: 28px;
  line-height: 38px;
  color: $body-text-color;
}

.product-price-compare {
  display: inline-block;
  margin-left: 10px;
  color: $body-text-color;
  font-size: 14px;

  .original {
    text-decoration: line-through;
  }

  span {
    display: inline-block;
    vertical-align: top;
  }

