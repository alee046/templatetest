    color: $white;

    &:hover, &:focus {
      background: darken($secondary-color, 10%);
    }
  }

  &.secondary {
    background: $secondary-color;
    color: $white;

    &:hover, &:focus {
      background: darken($secondary-color, 10%);
    }
  }

  &.third {
