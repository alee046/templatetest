}
.icon-check:before {
  content: "\e116";
}
.icon-cross:before {
  content: "\e117";
}
.icon-menu:before {
  content: "\e120";
}
.icon-star-full:before {
  content: "\e900";
}
.icon-angle-left:before {
  content: "\f104";
  font-size: 44px;
  line-height: 0;
}
.icon-angle-right:before {
  content: "\f105";
  font-size: 44px;
