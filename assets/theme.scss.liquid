/* General
-------------------------------- */

body {
  font-family: $body-font;
  color: $body-text-color;
  font-weight: $body-weight;
  font-size: $body-font-size-1;
  line-height: 1.625;

  @if($use-font-smoothing) {
    @include font-smoothing();
  }
}

.icon {
  @include launch-icons();
}

/* Links */

a {
  color: $primary-color;
  text-decoration: none;
  cursor: pointer;
  @include transition(all 0.2s $ease);

  &:focus,
  &:hover {
    color: $primary-color;
  }

  &.disabled {
    color: $body-text-color;
    cursor: default;

    &:focus,
    &:hover {
      color: $body-text-color;
      cursor: default;
    }
  }
}

/* Headers */

h1, h2, h3, h4, h5, h6 {
  font-family: $heading-font;
  font-weight: $heading-weight;
  font-size: inherit;
  margin: 0;
  padding: 0;
  @include font-smoothing;

  @if($use-font-smoothing) {
    @include font-smoothing();
  }
}

/* Basic text */

img {
  max-width: 100%;
  display: inline-block;
  vertical-align: top;
}

ul, ol, dl {
  padding: 0;
  margin: 23px 0;
}

ul {
  list-style: outside none;
}

ol {
  list-style: outside decimal;
}

li {
  margin: 12px 0;
}

hr {
  height: 2px;
  background: $border-color;
  border: 0;
}

p {
  margin: 0;
  padding: $gutter/2 0;
}

strong {
  font-weight: 700;

  @if($use-font-smoothing) {
    @include font-smoothing();
  }
}

.bold {
  font-weight: 700;
}

/* Tables */

table {
  color: $body-text-color;
  border: 1px solid $border-color;
  border-top: none;
  font-size: 14px;
  border-collapse: separate;
  margin: $gutter 0;
  background: transparent;

  &.clean {
    border: 0;
    border-radius: 0;
    font-size: $body-font-size-1;
  }

  .column-title {
    display: none;
  }
}

th {
  background: $border-color;
  color: $heading-text-color;
  font-weight: $heading-weight;
  text-align: center;

  .clean & {
    background: none;
  }
}

tr td, tr th {
  border-top: 1px solid $border-color;
  padding: $gutter/(3/2);
}

tr td {
  border-left: 1px solid $border-color;

  &:first-child {
    border-left: none;
  }
}

table.mobile-layout {
  border-bottom: none;

  .column-title {
    font-weight: 700;
    width: 114px;
    padding-right: 23px;
    display: inline-block;
  }

  thead {
    display: none;
  }

  tr td {
    width: 100%;
    display: block;
    text-align: left;
    border-top: 1px solid $border-color !important;
    border-left: none;

    /* < IE 10 fix */
    float: left;
    clear: left;
  }

  tr:nth-child(even) td {
    background: $border-color;
  }
}

/* Buttons */

.button,
.submit,
button {
  @include box-sizing(border-box);
  @include transition(all 0.2s $ease);
  @include font-smoothing(none);
  position: relative;
  display: inline-block;
  vertical-align: top;
  padding: 12px $gutter;
  font-family: $button-font;
  font-weight: $button-weight;
  color: $white;
  font-size: 15px;
  line-height: 22px;
  text-align: center;
  text-transform: capitalize;
  background-color: $primary-color;
  cursor: pointer;
  min-width: 150px;
  border: none;

  @include breakpoint(sm) {
    text-align: center;
  }

  .product-form-submit-wrap & {
    background-color: $primary-color;
    color: $white;
  }

  &:hover {
    background: #207f7d;
    color: $white;
  }

  &.secondary {
    background: transparent;
    border-color: $secondary-color;
    color: $secondary-color;

    &:hover {
      background: $secondary-color;
      border-color: $secondary-color;
      color: $white;
    }

    &.inverse {
      background: $secondary-color;
      border-color: $secondary-color;
      color: $white;

      &:hover {
        background: #dd821f;
      }
    }
  }

  &.black-outline{
    background: white;
    color: $black;
    border: 1px solid $black;
    padding: 15px 40px;
    &:hover,
    &:focus {
      background: $primary-color;
      border-color: $primary-color;
      color: $white;
    }
  }

  &.skinny{
    padding: 11px 40px;
  }

  &.uppercase{
