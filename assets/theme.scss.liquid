@mixin media($max: false, $min: false) {
  @if $max {
    @if $min {
      @media screen and (max-width: $max) and (min-width: $min) { @content; }
    } @else {
      @media screen and (max-width: $max) { @content; }
    }
  } @else {
    @media screen and (min-width: $min) { @content; }
  }
}

@mixin breakpoint($point) {
  @if $point == hd {
    @include media($min: $hd) { @content; }
  } @else if $point == xl {
    @include media($min: $l) { @content; }
  } @else if $point == l {
    @include media($max: $l) { @content; }
  } @else if $point == md-up {
    @include media($min: $md) { @content; }
  } @else if $point == md {
    @include media($max: $md) { @content; }
  } @else if $point == ms-up {
    @include media($min: $medium-small) { @content; }
  } @else if $point == ms {
    @include media($max: $medium-small) { @content; }
  } @else if $point == ipad-up {
    @include media($min: $ipad) { @content; }
  } @else if $point == sm-up {
    @include media($min: $sm) { @content; }
  } @else if $point == sm {
    @include media($max: $sm) { @content; }
  } @else if $point == xs-up {
    @include media($min: $xs) { @content; }
  } @else if $point == xs {
    @include media($max: $xs) { @content; }
  } @else if $point == featured-product {
    @include media($max: $featured-product) { @content; }
  } @else {
    @media (max-width: $point) { @content; }
  }
}

@mixin font-smoothing($value: antialiased) {
  // Values: none, antialiased (default)
  @if $value == antialiased {
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
  } @else {
    -moz-osx-font-smoothing: auto;
    -webkit-font-smoothing: subpixel-antialiased;
  }
}

