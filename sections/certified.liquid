<div
  class="module-wrapper style-{{ section.settings.style }} border"
  data-section-id="{{ section.id }}"
  data-section-type="stat-content">
  <div class="module home-inline">

    <div class="module-body home-inline-body">
      <div class="list clearfix">
        <div class="list-item">

          <div class="list-certified-wrapper">
            {% if section.settings.image != blank %}
              <div class="list-image-wrapper">
                <img
                  alt="{{ image.alt | escape }}"
                  src="{{ section.settings.image | img_url: '400x400', crop: 'center' }}">
              </div>
            {% endif %}
            <div>
              {% if section.settings.title != blank %}
                <div class="module-title">
                  <h2>{{ section.settings.title | escape }}</h2>
                </div>
              {% endif %}
              {% if section.settings.text != blank %}
                <div class="list-text{% if section.settings.title == blank %} no-margin{% endif %}">
                  {{  section.settings.text }}
                </div>
              {% endif %}
            </div>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Certified",
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "Background style",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "color",
          "label": "Color"
        },
        {
          "value": "gradient",
          "label": "Gradient"
        },
        {
          "value": "secondary-color",
          "label": "Secondary Color"
        },
        {
          "value": "third-color",
          "label": "Third Color"
        },
        {
          "value": "fourth-color",
          "label": "Fourth Color"
        },
        {
          "value": "fifth-color",
          "label": "Fifth Color"
        }
      ],
      "default": "default"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Logo image",
      "info": "400 x 400px recommended."
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Certified logo section"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Maecenas sed diam eget risus varius blandit sit amet non magna. Maecenas faucibus mollis interdum. Etiam porta sem malesuada magna mollis euismod. Nullam quis risus eget urna mollis ornare vel eu leo.</p>"
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Certified"
    }
  ]
}
{% endschema %}
