
<div class="side-text-wrapper">
  <div class="contact-wrapper">
    <div class="module-text">
      <div class="contact-item contact-form">
        {% form 'contact', id: 'contact-form' %}
          {% if form.errors %}
            <div class="contact-form-error-message">
              {{ 'contact.error' | t }}
            </div>
          {% endif %}
          {% if form.posted_successfully? %}
            <div class="success-message contact-form-success">
              <span class="icon icon-check contact-form-success-icon"></span>
              <p>Thank you for contacting us! We will get back to you as soon as possible.</p>
            </div>
          {% endif %}
          <div class="input-wrapper first">
            <input
              type="text"
              id="contact[name]"
              placeholder="{{ 'general.general.name_placeholder' | t }}"
              aria-label="{{ 'general.general.name_placeholder' | t }}"
              value=""
              name="contact[name]"
              class="{% if form.errors contains 'author' %}error{% endif %}">
          </div>
          <div class="input-wrapper">
            <input
              type="text"
              id="contact[email]"
              placeholder="{{ 'general.general.email_placeholder' | t }}"
              aria-label="{{ 'general.general.email_placeholder' | t }}"
              value=""
              name="contact[email]"
              class="{% if form.errors contains 'email' %}error{% endif %}">
          </div>
          <div class="input-wrapper">
            <input
              type="text"
              id="contact[subject]"
              placeholder="{{ 'general.general.subject_placeholder' | t }}"
              aria-label="{{ 'general.general.subject_placeholder' | t }}"
              value=""
              name="contact[subject]"
              class="{% if form.errors contains 'author' %}error{% endif %}">
          </div>
          <div class="input-wrapper">
            <textarea
              id="contact[body]"
              placeholder="{{ 'general.general.message' | t }}"
              aria-label="{{ 'general.general.message' | t }}"
              name="contact[body]"
              rows="6"
              class="{% if form.errors contains 'body' %}error{% endif %}"></textarea>
          </div>
          <div class="input-wrapper last">
            <input
              class="button secondary"
              type="submit"
              value="{{ 'general.general.submit' | t }}"
              aria-label="{{ 'general.general.submit' | t }}"
            >
          </div>
        {% endform %}
      </div>
    </div>
    <div class="right-contact-wrapper">
      <h2 class='right-contact-header'>We're here to help</h2>
      <div class="right-contact-info-wrapper">
        <img class="list-item-icon"
          alt="{{ icon.alt | escape }}"
          src="{{ section.settings.email-icon | img_url: '40x40', crop: 'center' }}">
        <a href="mailto:customercare@omax3.com" target="_blank">customercare@omax3.com</a>
      </div>
      <div class="right-contact-info-wrapper">
        <img class="list-item-icon"
          alt="{{ icon.alt | escape }}"
          src="{{ section.settings.phone-icon | img_url: '40x40', crop: 'center' }}">
        <a href="tel:1-800-765-6691">1-800-765-6691</a>
      </div>
      <div class="right-contact-info-wrapper">
        <img class="list-item-icon"
          alt="{{ icon.alt | escape }}"
          src="{{ section.settings.messenger-icon | img_url: '40x40', crop: 'center' }}">
        <a href="http://m.me/omax3" target="_blank">Facebook Messenger</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact form",
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "Background style",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "color",
          "label": "Color"
        },
        {
          "value": "gradient",
          "label": "Gradient"
        }
      ],
      "default": "light"
    },
    {
      "type": "image_picker",
      "id": "email-icon",
      "label": "Email icon",
      "info": "40 x 40px .png recommended."
    },
    {
      "type": "image_picker",
      "id": "phone-icon",
      "label": "Phone icon",
      "info": "40 x 40px .png recommended."
    },
    {
      "type": "image_picker",
      "id": "messenger-icon",
      "label": "Messenger icon",
      "info": "40 x 40px .png recommended."
    }
  ]
}
{% endschema %}
